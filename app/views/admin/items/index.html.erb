<div class="container">
 <div class="row">
   <div class="col-4">
        <h5><span class="bg-secondary">商品一覧</span></h5>

   </div>
   <p><%= link_to new_admin_item_path do %><button type="button" class="btn btn-primary rounded-circle p-0" style="width:2rem;height:2rem;">＋</button>
      <% end%></p>
        <table class="table">
          <thead class="table-secondary">
            <tr>
              <th scope="col">商品ID</th>
              <th scope="col">商品名</th>
              <th scope="col">税抜価格</th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
              <tr>
                <td><%= item.id %></td>
                <td>
                  <%= link_to admin_item_path(item.id) do %>
                    <%= item.name %>
                  <% end %>
                </td>
                <td><%= item.price %>円</td>
              </tr>
            <% end %>
          </tbody>
        </table>
 </div>
</div>
<%= paginate @items %>