<div class="container">
 <div class="row">
  <div class="col-4 pt-10">
    <h4><span class="bg-secondary">商品詳細</span></h4>
  </div>
  <div class="col-2 d-flex justify-content-center">
    　<%= image_tag @item.image %>
  </div>
    <div class="col-2 offset-1 d-flex justify-content-center">
        <table>
          <tr>
            <th>商品名</th>
            <th>
              <%= @item.name %>
            </th>
          </tr>

          <tr>
            <th>商品説明</th>
            <th>
              <%= @item.introduction %>
            </th>
          </tr>
          <tr>
            <th>税抜価格</th>
            <th>
              <%= @item.price %>円
            </th>
          </tr>
        </table>

    </div>
    <p><%= link_to "編集する", edit_admin_item_path, class:"btn btn-success" %></p>
 </div>
</div>