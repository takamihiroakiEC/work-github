<h2>注文履歴一覧</h2>


<table>
    <thead>
        <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
        </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr>
          <td>
            <%= link_to admin_order_path(order.id) do %>
              <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
            <% end %>
          </td>
          <td><%= order.customer.last_name %> <%= order.customer.first_name %></td>
          <td><% total = 0 %>
              <% order.ordered_items.each do |ordered_item| %>
                <% total += ordered_item.amount %>
              <% end %>
              <%= total %>
          </td>
      </tr>

    <% end %>
    </tbody>
</table>