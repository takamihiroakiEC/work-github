<h2>会員一覧</h2>
<table>
  <tr>
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
  </tr>
  <% @customers.each do |customer| %>
    <tr>
      <td>
        <%= customer.id %>
      </td>
      <td>
        <%= link_to admin_customer_path(customer.id) do %>
          <%= customer.last_name %>
        <% end %>
      </td>
      <td>
        <%= customer.email %>
      </td>
      <td>
        <%= customer.is_active %>
      </td>
    </tr>
  <% end %>
</table>
