<!DOCTYPE html>
<html>
  <head>
    <title>WorkGithub</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/0cddb582b6.js" crossorigin="anonymous"></script>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="sticky-top">
      <nav class="navbar navbar-expand-md navbar-dark bg-white text-white">
        <div class = "container">
          <button class = "navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="false"
           aria-label="Toggle navigation"><div class="navbar-toggler-icon"></div>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if admin_signed_in? %>
                <li>
                  <%= link_to "商品一覧", admin_items_path,class: 'nav-link text-dark' %>
                </li>
                <li>
                  <%= link_to "会員一覧", admin_customers_path,class: 'nav-link text-dark' %>
                </li>
                <li>
                  <%= link_to "注文履歴一覧", admin_root_path,class: 'nav-link text-dark' %>
                </li>
                <li>
                  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete,class: 'nav-link text-dark' %>
                </li>

              <% elsif customer_signed_in? %>

                <li>
                  <%= link_to "マイページ", public_customers_my_page_path,class: 'nav-link text-dark' %>
                </li>
                <li>
                  <%= link_to "商品一覧", public_items_path,class: 'nav-link text-dark' %>
                </li>
                <li>
                  <%= link_to "カート", public_cart_items_path,class: 'nav-link text-dark' %>
                </li>
                <li>
                  <%= link_to "ログアウト", destroy_customer_session_path, method: :delete,class: 'nav-link text-dark' %>
                </li>

              <% else %>
                <li>
                  <%= link_to "About", public_homes_about_path,class: 'nav-link text-dark' %>
                </li>
                <li>
                  <%= link_to "商品一覧", public_items_path,class: 'nav-link text-dark' %>
                </li>
                <li>
                  <%= link_to "新規登録", new_customer_registration_path,class: 'nav-link text-dark' %>
                </li>

                <li>
                  <%= link_to "ログイン", new_customer_session_path,class: 'nav-link text-dark' %>
                </li>

              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
    <!--<footer class="fixed-bottom bg-secondary pt-5 pb-4">-->
    <!--  <div class="container">-->

    <!--  </div>-->
    <!--</footer>-->
  </body>
</html>
