<h2>商品詳細</h2>

<div class="col-4">
  <%= image_tag @item.image %>
</div>
<div class="col-6">
      <h3><%= @item.name %></h3>

      <%= @item.introduction %>

      <h3>￥<%= @item.price %>(税込)</h3>

      <%= form_with model: @cart_item, url: public_cart_items_path do |f| %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.select :amount, *[1..3] %>
        <%= f.submit 'カートに入れる', class:"btn btn-success" %>
      <% end %>
</div>