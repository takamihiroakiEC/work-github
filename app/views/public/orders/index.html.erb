<h2>注文履歴一覧</h2>
<table>
    <thead>
        <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>注文詳細</th>
        </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr>
          <td>
              <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
          </td>
          <td>
            <%= order.postal_code %><br>
            <%= order.address %><br>
            <%= order.receiver_name %>
          </td>
          <% total = 0 %>
          <td>
          <% order.ordered_items.each do |ordered_item| %>
          　<%= ordered_item.item.name %><br>
            <% total += ordered_item.amount*ordered_item.purchase_price %>
          <% end %>
          </td>
          <td><%= total %></td>
          <td>
            <%= link_to "表示する", public_order_path(order.id), class:"btn btn-primary"  %>
          </td>
      </tr>
    <% end %>
    </tbody>
</table>